---
title: Hope in Us - WebTV
---
section.page#webtv
    .inside
        .page-nav 
            a href="/en/"
                = "Back"
        .intro 
            h2=data.pages.en.webtv.title
            div=data.pages.en.webtv.intro
        .videos 
            - data.pages.en.webtv.links.each do |item|
                .item 
                    h4= item.title
                    .item-content
                        - if item.content
                            p = markdown item.content
                        p 
                            a.link target="blank" href=item.link
                                =item.label
                        p
                            - if item.fiche
                                a.link target="blank" href=item.fiche
                                    ="Download"
                            - if item.annexe 
                                a.link target="blank" href=item.fiche
                                    ="Appendices"